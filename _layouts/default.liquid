<!doctype html>
<html>
	<head>
{% include head.liquid %}
	</head>
{% if page.classes %}
	<body class="{{ page.classes | join: ' ' }}">
{% else %}
	<body>
{% endif %}
		<button
			data-localize="site_scroll_top"
			onclick="topFunction()"
			id="scrollButton"
			title="Go to top"
		>
			Top
		</button>
		<a href="#content" class="sr-only">Skip to content</a>
		<div class="container">
{% include header.liquid %}
			<div class="row mt-4" id="content">
				<div class="col-md-9">
					<article>
{% if page.no_h1_title == nil %}
						<h1>{{ page.title }}</h1>
{% endif %}
				{{ content }}
					</article>
				</div>
					<div class="col-md-3">
						<aside>
{%if page.cards%}
{% include {{ page.cards }} %}
{%else%}
{% include cards.liquid %}
{%endif%}
						</aside>
					</div>
			</div>
{% include footer.liquid %}
		</div>
{% include scripts.liquid %}
	</body>
</html>
